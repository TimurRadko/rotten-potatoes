<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         metadata-complete="false">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>com.epam.web.rotten.potatoes.controller.FilmController</servlet-class>
        <multipart-config>
            <max-request-size>6291456</max-request-size><!--512 * 512 * 24 = 12MB-->
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.epam.web.rotten.potatoes.controller.filter.EncoderFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>lang</filter-name>
        <filter-class>com.epam.web.rotten.potatoes.controller.filter.LocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>lang</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>security</filter-name>
        <filter-class>com.epam.web.rotten.potatoes.controller.filter.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>security</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <jsp-config>
        <taglib>
            <taglib-uri>custom-tags</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
        </taglib>
    </jsp-config>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/errors/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/views/errors/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>com.epam.web.rotten.potatoes.exceptions.ConnectionPoolException</exception-type>
        <location>/WEB-INF/views/errors/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>com.epam.web.rotten.potatoes.exceptions.ServiceException</exception-type>
        <location>/WEB-INF/views/errors/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>com.epam.web.rotten.potatoes.exceptions.PageNotFoundException</exception-type>
        <location>/WEB-INF/views/errors/error.jsp</location>
    </error-page>
</web-app>
